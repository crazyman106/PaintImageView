<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.drawpaintview.ui.activity.MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画直线" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正方形" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撤销" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="橡皮" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_main_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空" />


        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
